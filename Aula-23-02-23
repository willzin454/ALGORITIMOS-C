Ex 1

#include <stdio.h>

int main()
{
	float diam, raio, area, circufe;
	printf("Informe o raio: ");
	scanf("%f", &raio);
	diam = 2*raio;
	printf("O diametro e: %.2f\n", diam);
	area = 3.14*(raio*raio);
	printf("A area e: %.2f\n", area);
	circufe = 2*3.14*raio;
	printf("A circuferencia e: %.2f\n", circufe);	
	return 0;
}
