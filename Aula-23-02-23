Ex 2

#include <stdio.h>

int main()
{
	float salario, reaj, total;
	printf("Descreva seu salario: ");
	scanf("%f", &salario);
	printf("Descreva o percentual de reajuste: ");	
	scanf("%f", &reaj);
	total = salario*reaj;
	printf("O seu novo valor salarial e: %f", total);
	return 0;
}
